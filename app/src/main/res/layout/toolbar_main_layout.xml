<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/main_activity_toolbar"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/statusbar_plus_toolbar_height"
    android:background="@drawable/tab_background_gradient">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/statusbar_height">

       <ImageView
           android:id="@+id/main_toolbar_profile_image"
           android:layout_width="32dp"
           android:layout_height="32dp"
           android:layout_marginStart="8dp"
           android:layout_marginEnd="14dp"
           android:layout_centerVertical="true"
           android:src="@drawable/ic_menu_24dp"/>

        <View
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>

        <EditText
            android:id="@+id/main_toolbar_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:hint="@string/search"
            android:textColorHint="@color/white"
            android:layout_toEndOf="@+id/main_toolbar_profile_image"
            android:layout_toStartOf="@+id/main_toolbar_camera_flash"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            tools:textColor="@android:color/black"
            android:drawablePadding="2dp"
            android:inputType="text"
            android:singleLine="true"
            android:drawableStart="@android:drawable/ic_menu_search" />

        <ImageView
            android:id="@+id/main_toolbar_camera_flash"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/main_toolbar_switch_camera_or_menu_icon"
            android:src="@drawable/ic_flash_on"
            android:alpha="0"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/main_toolbar_switch_camera_or_menu_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_switch_camera_24dp"/>




        <View
            android:id="@+id/toolbar_bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_t75"
            android:layout_alignParentBottom="true"
            android:alpha="0"/>

    </RelativeLayout>


</FrameLayout>


