<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    tools:context=".findme.FindMeMapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/findMe_notification_textView"
        android:paddingStart="10dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="65dp"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="bottom|start"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:scrollbars="vertical"
        android:text="@string/hi_we_are_setting_up_things_for_you"/>

    <ImageView
        android:id="@+id/toggle_navigation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="110dp"
        android:background="#d6ffffff"
        android:contentDescription="@string/toggle_map_view"
        android:src="@drawable/ic_directions_black_24dp" />


    <ImageView
        android:id="@+id/toggle_mapView"
        android:src="@drawable/ic_streetview_black_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#d6ffffff"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/toggle_map_view" />

    <ImageView
        android:id="@+id/toggle_FindMe"
        android:src="@drawable/ic_perm_contact_calendar_red_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#d6ffffff"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/toggle_map_view" />




</FrameLayout>
