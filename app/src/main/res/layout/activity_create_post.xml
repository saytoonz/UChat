<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_profileImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/profile_image"
                app:civ_border_color="@color/colorAccent2"
                app:civ_border_width="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:layout_marginTop="2dp">


                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:text="Display user name"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent2"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/toolbar_chat_activity_user_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share with"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent2"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/select_shareWith"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Edit Text for Text post and captions-->
        <EditText
            android:id="@+id/postTest_Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/post_background_transparent"
            android:inputType="textMultiLine"
            android:maxHeight="250dp"
            android:minHeight="120dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>


        <LinearLayout
            android:id="@+id/fontSize_and_fontfamily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <Spinner
                android:id="@+id/select_fontFamily_for_Text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <Spinner
                android:id="@+id/select_fontSize_for_Text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <!-- Backgrounds for Text-->
        <HorizontalScrollView
            android:id="@+id/customize_EditText_Background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/post_background_transparent"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_done_black_24dp" />

                <ImageView
                    android:id="@+id/post_background_black"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_black"
                    android:padding="5dp" />


                <ImageView
                    android:id="@+id/post_background_navy"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_navy"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/post_background_green"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_green"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/post_background_pink"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_pink"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/post_background_maroon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_maroon"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/post_background_shadesofgrey"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_shadesofgrey"
                    android:padding="5dp" />


                <ImageView
                    android:id="@+id/post_background_jupiter"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_jupiter"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/post_background_sherbert"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_sherbert"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/post_background_firewatch"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_firewatch"
                    android:padding="5dp"  />


                <ImageView
                    android:id="@+id/post_background_grapefruitsunset"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_grapefruitsunset"
                    android:padding="5dp" />


                <ImageView
                    android:id="@+id/post_background_deepspace"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_deepspace"
                    android:padding="5dp" />



            </LinearLayout>
        </HorizontalScrollView>


        <!-- Image View to display
        image and videos when selected-->
        <FrameLayout
            android:id="@+id/file_postFrame"
            android:foregroundGravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:id="@+id/image_video_imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:maxHeight="110dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/post_VideoThumbnail_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/post_imageVideoRemove"
                android:src="@drawable/ic_remove"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top|end"/>
        </FrameLayout>



        <!-- Select Image or Video -->
        <LinearLayout
            android:id="@+id/SelectImage_Video"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo_camera__24dp"/>
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photo_video"
                android:textSize="16sp"/>
        </LinearLayout>





        <!-- Select Tag a Friend -->
        <LinearLayout
            android:id="@+id/Tag_a_friend"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_add__24dp" />
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_a_friend"
                android:textSize="16sp"/>
        </LinearLayout>


        <!-- Add Location -->
        <LinearLayout
            android:id="@+id/add_location"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place__24dp" />
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_location"
                android:textSize="16sp"/>
        </LinearLayout>




        <!-- Share Button-->
        <Button
            android:id="@+id/create_post"
            android:text="@string/create_post"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/colorAccent2"/>
    </LinearLayout>

</ScrollView>